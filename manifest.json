{
    "manifest_version": 3,
    "name": "YouTube Comments Filter",
    "version": "1.0",
    "description": "A Chrome extension to search and filter YouTube comments.",
    "permissions": [
      "tabs",
      "storage"
    ],
    "host_permissions": [
      "https://www.googleapis.com/*"

    ],
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/watch*"],
        "js": ["contentscript.js"],
        "css": ["style.css"],
        "run_at": "document_idle"
      }
    ]
}
